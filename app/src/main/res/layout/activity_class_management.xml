<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Class Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Class Name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etClassName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Total Hours -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="Total Hours">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTotalHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Groups -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Groups"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/groupContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Groups will be added dynamically here -->
        </LinearLayout>

        <Button
            android:id="@+id/btnAddGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add Group"
            android:layout_marginTop="8dp"/>

        <!-- Status -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/radioStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioPaused"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paused"/>

            <RadioButton
                android:id="@+id/radioCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"/>
        </RadioGroup>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSaveClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/green"
            android:text="Save Class" />
    </LinearLayout>
</ScrollView>