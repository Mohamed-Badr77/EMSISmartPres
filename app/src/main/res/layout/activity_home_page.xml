<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomePage">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/notificationButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:contentDescription="Notifications"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/baseline_circle_notifications_24"
            app:iconTint="@color/white" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- User Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="24dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"
                    android:outlineProvider="background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_logo" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Nom Prénom"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvUserSpeciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spécialité"
                    android:textColor="@color/gray_600"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvUserEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="email@example.com"
                    android:textColor="@color/gray_600"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Services Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Emploi du Temps -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/emploi"
                        style="@style/Widget.MaterialComponents.CardView"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:contentDescription="Emploi du Temps"
                                android:src="@drawable/calendar" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Emploi du Temps"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Localisation des sites -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/buttonMap"
                        style="@style/Widget.MaterialComponents.CardView"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/map"
                                android:contentDescription="Localisation des sites"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="Campus"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Consultation des documents -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/documents"
                        style="@style/Widget.MaterialComponents.CardView"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/document"
                                android:contentDescription="Consultation des documents"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Documents"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginTop="12dp"
                                android:textAlignment="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Rattrapages -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/rattrapage"
                        style="@style/Widget.MaterialComponents.CardView"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/rattrapage"
                                android:contentDescription="Rattrapages"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rattrapages"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Absences -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/absence"
                        style="@style/Widget.MaterialComponents.CardView"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:layout_marginEnd="12dp"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/absence"
                                android:contentDescription="Absences"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Absences"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Chatbot -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/buttonAI"
                        style="@style/Widget.MaterialComponents.CardView"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/chatbot"
                                android:contentDescription="Chatbot"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chatbot"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Quick Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClassManagement"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_marginEnd="12dp"
                        android:drawableTop="@drawable/baseline_map_24"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Add a Course"
                        android:textAllCaps="false"
                        app:iconGravity="textTop"
                        app:strokeColor="@color/gray_300"/>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Logout -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogout"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/red_500"
                android:text="Logout"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <!-- insert at the end of activity_home_page.xml, as a sibling to your NestedScrollView -->
    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:tint="@color/green"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/buttonProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_person_24"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Courses -->
        <LinearLayout
            android:id="@+id/btnViewClasses"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/course"
                android:tint="@color/black"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Courses"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Groups -->
        <LinearLayout
            android:id="@+id/btnGroupManagement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/group"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/btnStudentManagement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            tools:ignore="DuplicateIds">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/student"
                tools:ignore="UseAppTint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Students"
                android:textSize="12sp"
                android:textColor="@color/gray_600"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
