<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomePage">

    <!-- App Bar with Profile and Notification -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Welcome">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Profile Image"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_emsi"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/notificationButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/baseline_circle_notifications_24"
            app:iconTint="@color/white"
            android:contentDescription="@string/notifications"
            />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Main Content with Smooth Scrolling -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello there!"
                        android:id="@+id/welcome_text"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Welcome to EMSI Smart Presence"
                        android:textColor="@color/gray_600"
                        android:textSize="16sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Attendance Stat -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95%"
                            android:textSize="24sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Attendance"
                            android:textColor="@color/gray_600"/>
                    </LinearLayout>

                    <!-- Classes Stat -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="24sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Classes"
                            android:textColor="@color/gray_600"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons Grid -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:padding="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonProfile"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:layout_rowWeight="1"
                        android:drawableTop="@drawable/baseline_person_24"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Profile"
                        android:textAllCaps="false"
                        app:iconGravity="textTop"
                        app:strokeColor="@color/gray_300" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSettings"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:layout_rowWeight="1"
                        android:drawableTop="@drawable/baseline_settings_24"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Settings"
                        android:textAllCaps="false"
                        app:iconGravity="textTop"
                        app:strokeColor="@color/gray_300" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonAI"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:layout_rowWeight="1"
                        android:drawableTop="@drawable/baseline_memory_24"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Use AI"
                        android:textAllCaps="false"
                        app:iconGravity="textTop"
                        app:strokeColor="@color/gray_300" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonMap"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:layout_rowWeight="1"
                        android:drawableTop="@drawable/baseline_map_24"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Open Map"
                        android:textAllCaps="false"
                        app:iconGravity="textTop"
                        app:strokeColor="@color/gray_300" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClassManagement"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/baseline_map_24"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Add a Course"
                        android:textAllCaps="false"
                        app:iconGravity="textTop"
                        app:strokeColor="@color/gray_300" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewClasses"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/baseline_map_24"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Check Current Courses"
                        android:textAllCaps="false"
                        app:iconGravity="textTop"
                        app:strokeColor="@color/gray_300" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGroupManagement"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/baseline_map_24"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Manage Groups"
                        android:textAllCaps="false"
                        app:iconGravity="textTop"
                        app:strokeColor="@color/gray_300" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStudentManagement"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:drawableTop="@drawable/baseline_person_24"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Manage Students"
                        android:textAllCaps="false"
                        app:iconGravity="textTop"
                        app:strokeColor="@color/gray_300" />
                </GridLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Logout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonLogout"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/red_500"
                android:text="Logout"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>