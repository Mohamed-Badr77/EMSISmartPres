<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Emploi du temps" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Timetable Section -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Day"
                        android:textStyle="bold"
                        android:background="@color/green"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="8:30 - 10:30"
                        android:textStyle="bold"
                        android:background="@color/green"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="10:45 - 12:45"
                        android:textStyle="bold"
                        android:background="@color/green"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="14:00 - 16:00"
                        android:textStyle="bold"
                        android:background="@color/green"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="16:15 - 18:15"
                        android:textStyle="bold"
                        android:background="@color/green"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <!-- Days -->
                <include layout="@layout/timetable_day_row" android:id="@+id/monday" />
                <include layout="@layout/timetable_day_row" android:id="@+id/tuesday" />
                <include layout="@layout/timetable_day_row" android:id="@+id/wednesday" />
                <include layout="@layout/timetable_day_row" android:id="@+id/thursday" />
                <include layout="@layout/timetable_day_row" android:id="@+id/friday" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Unscheduled Classes Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@color/green"
            android:textColor="@color/white"
            android:text="Unscheduled Classes"
            android:textStyle="bold"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/unscheduledClassesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"/>

    </LinearLayout>
</LinearLayout>
